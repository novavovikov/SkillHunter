pipeline {
  agent any

   stages {
    stage('Build') {
      steps {
        sh 'docker-compose -f docker-compose.prod.yml build --no-cache'
        sh 'docker-compose -f docker-compose.prod.yml run landin npm run build'
        sh 'docker-compose -f docker-compose.prod.yml run landin npm run export'
      }
    }

    stage('Start') {
      steps {
        sh 'docker-compose -f docker-compose.prod.yml up -d --force-recreate'
      }
    }
  }
}
