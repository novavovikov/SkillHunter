pipeline {
  agent any

   stages {
    stage('Clear') {
      steps {
        sh 'build/clear.sh'
      }
    }

    stage('Build') {
      steps {
        sh 'docker-compose -f docker-compose.prod.yml build --no-cache'
      }
    }

    stage('Start') {
      steps {
        sh 'docker-compose -f docker-compose.prod.yml up -d --force-recreate'
      }
    }
  }
}
